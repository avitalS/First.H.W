pipeline {
    agent any

    // הגדרות כלליות לכל הריצה
    options {
        // הגדרת זמן מקסימלי לריצה - 30 שניות
        timeout(time: 30, unit: 'SECONDS')
    }

    // הגדרת משתני סביבה וסיסמאות
    environment {
        APP_ENV = "build APP_ENV_try"
        // שימוש ב-ID המדויק שמופיע אצלך בג'נקינס
        MY_SECRET = credentials('my password')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building in environment: ${env.APP_ENV}"
                // הדפסת שם המשתמש שמשכנו מה-Credentials
                echo "Executing as user: ${env.MY_SECRET_USR}"
                bat 'python build/build_script.py'
            }
        }

        stage('Test') {
            steps {
                echo 'Starting Tests...'
                // הוספת ה-PYTHONPATH פותרת את שגיאת ה-src שראינו קודם
                bat 'set PYTHONPATH=. && python test/test_script.py'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Starting Deployment...'
                bat 'python deploy/deploy_script.py'
            }
        }
    }

    // פעולות שירוצו תמיד בסיום
    post {
        always {
            echo 'Pipeline finished execution.'
        }
    }
}